{
    "name": "Wheels-Mobile",
    "version": "0.0.1",
    "description": "An Ionic project",
    "devDependencies": {
        "@ionic/cli-plugin-cordova": "1.5.0",
        "@ionic/cli-plugin-gulp": "1.1.0",
        "@ionic/cli-plugin-ionic1": "2.1.0",
        "grunt-contrib-jshint": "^1.1.0",
        "gulp": "^3.5.6",
        "gulp-autoprefixer": "^4.0.0",
        "gulp-clean-css": "^3.7.0",
        "gulp-concat": "^2.6.1",
        "gulp-rename": "^1.2.0",
        "gulp-sass": "^3.1.0"
    },
    "dependencies": {
        "@ionic-native/barcode-scanner": "^4.1.0",
        "@ionic-native/toast": "^4.1.0",
        "cordova-android": "^6.2.3",
        "cordova-ios": "^4.4.0",
        "cordova-plugin-camera": "git+https://github.com/apache/cordova-plugin-camera.git",
        "cordova-plugin-compat": "^1.1.0",
        "cordova-plugin-console": "^1.0.7",
        "cordova-plugin-device": "^1.1.6",
        "cordova-plugin-splashscreen": "^4.0.3",
        "cordova-plugin-statusbar": "^2.2.3",
        "cordova-plugin-whitelist": "^1.3.2",
        "ionic-plugin-keyboard": "^2.2.1",
        "phonegap-plugin-barcodescanner": "^6.0.8",
        "signature_pad": "^2.2.1"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-console": {},
            "cordova-plugin-device": {},
            "cordova-plugin-splashscreen": {},
            "cordova-plugin-statusbar": {},
            "cordova-plugin-whitelist": {},
            "ionic-plugin-keyboard": {},
            "phonegap-plugin-barcodescanner": {},
            "cordova-plugin-compat": {},
            "cordova-plugin-camera": {}
        },
        "platforms": [
            "android",
            "ios"
        ]
    },
    "scripts": {
      "clean": "ionic-app-scripts clean",
      "build": "ionic cordova build android --prod ",
      "lint": "ionic-app-scripts lint",
      "ionic:build": "ionic-app-scripts build",
      "ionic:serve": "ionic-app-scripts serve",
      "signArm7": "jarsigner -verbose -sigalg SHA1withRSA -digestalg SHA1 -keystore my-release-key.keystore platforms/android/build/outputs/apk/android-release-unsigned.apk alias_name  -storepass justDoIt",
      "optimizeArm7": "rm build/HypeArm7.apk &&  ~/Android/Sdk/build-tools/25.0.2/zipalign -v 4 platforms/android/build/outputs/apk/android-release-unsigned.apk build/HypeArm7.apk",
      "build:apk": " npm run build && npm run signArm7 && npm run optimizeArm7"
    }
}
